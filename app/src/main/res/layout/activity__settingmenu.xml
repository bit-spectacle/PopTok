<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text = "비밀번호 변경"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/changeNickNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임 변경"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/changePasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/changeProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필 이미지 설정"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림 설정 "
            android:layout_marginTop="20dp"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전체 알림"
            android:id="@+id/allAlramSwitch"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ㄴ 친구 포스팅"
            android:id="@+id/friendPostingAlramSwitch"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ㄴ 댓글"
            android:id="@+id/commentAlramSwitch"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치"
            android:layout_marginTop="15dp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치 추적"
            android:id="@+id/gpsSwitch"
            />




    </LinearLayout>
</LinearLayout>

